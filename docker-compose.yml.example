services:
  mtprotoproxy:
    build: .
    restart: unless-stopped
    ports:
      - "443:443"
      - "443:443/udp"
    volumes:
      - ./config.py:/home/tgproxy/config.py
      - ./mtprotoproxy.py:/home/tgproxy/mtprotoproxy.py
      - /etc/localtime:/etc/localtime:ro
    environment:
      - INSTANCES=1

networks:
  default:
    enable_ipv6: true
